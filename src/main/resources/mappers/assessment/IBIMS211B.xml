    <!-- 담보번호 채번 -->
    <select id="makeMrtgMngmNo" resultType="String" parameterType="com.nanuri.rams.business.common.vo.TB06013PVO">
    	SELECT (
                TO_CHAR(SYSDATE, 'YYYY')
                || LPAD(#{mrtgStupKndCd}, 2, '0')
                || #{mrtgLclsCd}
                || #{mrtgMdclCd}
                || LPAD(
                        (
                          (SELECT COUNT(1)
                             FROM IBIMS211B a 
                            WHERE 1=1 
                              AND SUBSTR(a.RGST_DT, 1, 4) = TO_CHAR(SYSDATE, 'YYYY')
                          ) + 1
                        ), 4, '0'
                      )
               ) AS MRTG_MNGM_NO 
        FROM DUAL
    </select>
    
