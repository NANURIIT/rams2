               , #{trSn}                                   <!-- 거래일련번호 -->
               , #{excSn}                                  <!-- 실행일련번호 -->
               , #{etprCrdtGrntTrKindCd}                   <!-- 거래종류코드 -->
               , #{nsFndCd}                                <!-- 고유자산펀드코드 -->
               , #{synsCd}                                 <!-- 적용코드 -->
               , #{holdPrpsDcd}                            <!-- 보유목적구분코드 -->
               , #{ippDcd}                                 <!-- 입출구분코드 -->
               , #{trAmt}                                  <!-- 거래금액 -->
               , #{trAmt}                                  <!-- 딜배당금액 -->
               , #{trDt}                                   <!-- 거래일자 -->
               , #{stlDt}                                  <!-- 결제일자 -->
               , #{opntNsFndCd}                            <!-- 상대고유자산펀드코드 -->
               , #{opntTrSn}                               <!-- 상대거래일련번호 -->
               , #{xtnlIsttCd}                             <!-- 외부기관코드 -->
